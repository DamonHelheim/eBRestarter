<UserControl x:Class="eBRestarter.Components.AnimatedContentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:eBRestarter.Components"
             xmlns:MW="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="{DynamicResource MenuBackgroundColor}">

    <Grid Background="{DynamicResource MenuBackgroundColor}">
        
        <MW:MetroAnimatedTabControl Background="{DynamicResource MenuBackgroundColor}">
            
            <MW:MetroTabItem Name       ="MetroTabItem"
                             Background ="{DynamicResource MenuBackgroundColor_3}"
                             Width      ="12500">

                <ContentControl Name="PagePlace"/>

            </MW:MetroTabItem>
            
        </MW:MetroAnimatedTabControl>
        
    </Grid>

</UserControl>
